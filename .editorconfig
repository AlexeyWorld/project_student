# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,htm}]
indent_size = 2
max_line_length = 120

[*.css]
indent_size = 2

[*.js]
indent_size = 2
quote_type = single

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{json,yml}]
indent_size = 2

[*.{jpg,png,gif,svg}]
binary = true